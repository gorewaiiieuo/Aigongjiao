<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    android:layout_marginTop="10sp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_walkend"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14sp"
            android:layout_marginStart="14sp"
            android:src="@drawable/train" />

        <TextView
            android:id="@+id/tv_train_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18sp"
            android:layout_marginStart="18sp"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@+id/iv_walkend"
            android:layout_toRightOf="@+id/iv_walkend"
            android:text="陈家桥"
            android:textColor="#000000"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="150px"
            android:layout_below="@+id/tv_bus_start"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40sp"
            android:layout_marginStart="40sp"
            android:src="@drawable/origeline" />

        <TextView
            android:id="@+id/tv_trainInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_train_start"
            android:layout_below="@+id/tv_train_start"
            android:layout_marginLeft="46sp"
            android:layout_marginTop="20sp"
            android:text="轨道交通1号线（尖顶坡-小什字）" />

        <TextView
            android:id="@+id/tv_trainStationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_trainInfo"
            android:layout_below="@+id/tv_trainInfo"
            android:textColor="#FFA500" />

        <TextView
            android:id="@+id/tv_train_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_train_start"
            android:layout_alignStart="@+id/tv_train_start"
            android:layout_marginBottom="10px"
            android:layout_below="@id/tv_trainStationInfo"
            android:text="小龙坎"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>