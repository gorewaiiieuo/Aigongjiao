<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    android:layout_marginTop="10sp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_walkend"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14sp"
            android:layout_marginStart="14sp"
            android:src="@drawable/walk" />

        <TextView
            android:id="@+id/tv_walkitem_orginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23sp"
            android:layout_marginStart="23sp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/iv_walkend"
            android:layout_toRightOf="@+id/iv_walkend"
            android:text="我的位置"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/tv_walkitem_orginal"
            android:layout_marginLeft="40sp"
            android:layout_marginStart="40sp"
            android:src="@drawable/dottedline" />

        <TextView
            android:id="@+id/tv_walkinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_walkitem_orginal"
            android:layout_below="@+id/tv_walkitem_orginal"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="10dp"
            android:text="步行500米（8分钟）" />

    </RelativeLayout>
</android.support.v7.widget.CardView>