<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:id="@+id/cardView2">

    <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">


       <EditText
           android:id="@+id/et_queryLine"
           android:layout_width="180dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="25dp"
           android:ems="10"
           android:hint="输入线路号"
           android:inputType="textPersonName" />

       <Button
           android:id="@+id/btn_queryLine"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:text="查询" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2"
        android:layout_below="@+id/cardView2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginRight="6dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/et_queryStation"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:ems="10"
                android:hint="输入站点名"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_queryStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:text="查询" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardView3"
        android:layout_alignStart="@+id/cardView3"
        android:layout_below="@+id/cardView3"
        android:layout_marginTop="19dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginRight="6dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_historyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:text="搜索历史"
                android:textColor="#000000" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_searchHistory"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_historyTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:descendantFocusability="blocksDescendants"
                android:scrollbars="horizontal" />
        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>
