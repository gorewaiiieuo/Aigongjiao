<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30sp">


    <ImageView
        android:id="@+id/iv_historyIcon"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15sp"
        app:srcCompat="@drawable/routeselecthistory" />

    <TextView
        android:id="@+id/tv_startHistrory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/iv_historyIcon"
        android:layout_toRightOf="@+id/iv_historyIcon"
        android:text="我的位置"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/iv_historyArrow"
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17sp"
        android:layout_toEndOf="@+id/tv_startHistrory"
        android:layout_toRightOf="@+id/tv_startHistrory"
        app:srcCompat="@drawable/right" />

    <TextView
        android:id="@+id/tv_endHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17sp"
        android:layout_toEndOf="@+id/iv_historyArrow"
        android:layout_toRightOf="@+id/iv_historyArrow"
        android:text="赖家桥(地铁站)"
        android:textColor="#000" />
</RelativeLayout>